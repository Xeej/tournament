.row
  .col
    %h1.page__title= t('matches.title')

-# search form
.row{style: 'margin-top: -15px;'}
  .col
    .search-form.form-group
      = form_tag matches_path, method: 'get', class: 'form-inline' do
        = search_field_tag :search, params[:search], class: 'form-control', placeholder: t('players.search')
        = button_tag type: 'submit', class: 'btn btn-ghost', name: nil do
          %span.material-icons= 'search'
-if current_user.present? && current_user.super_admin?
  .row
    = link_to new_match_path, action: :create, class: 'btn btn-sstm btn-square', style: 'margin-right: auto;' do
      %span.material-icons.admin-actions__link__icon= 'add'

.tab-content#matches-tabs-content
  .tab-pane.fade.show.active#stats{role: 'tabpanel', 'aria-labelledby'=>'stats-tab'}
    %table.table.table-hover.table-borderless
      %thead.table-header
        %tr
          %th= link_to t('matches.player1'), matches_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'name', order: 'asc', anchor: 'stats')
          %th.text-center= link_to t('matches.player1'), matches_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'surname', order: 'asc', anchor: 'stats')
          %th.text-center.d-none.d-sm-table-cell.d-md-table-cell.d-lg-none.d-xl-table-cell= link_to t('matches.start_time'), matches_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'start_time', order: 'asc', anchor: 'stats')
          %th.text-center= link_to t('matches.winner'), matches_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'win_loss_ratio', order: 'asc', anchor: 'stats')

      %tbody.table-content.with-show.player-list-body
        - if @matches.any?
          - @matches.each_with_index do |match, i|
            %tr{'data-id': match.id, 'data-component'=>'matche'}
              %td= [match.player1.name, match.player1.surname].join(' ')
              %td.text-center= [match.player2.name, match.player2.surname].join(' ')
              %td.text-center.d-none.d-sm-table-cell.d-md-table-cell.d-lg-none.d-xl-table-cell= match.start_time.strftime("%Y-%m-%d")
              %td.text-center
                - if match.winner_id.blank?
                  = '-'
                - else
                  = "#{match.player_winner.surname} #{match.player_winner.name}"
              - if current_user.present? and current_user.super_admin?
                %td.admin-list-actions
                  .admin-list-actions__link
                    = link_to edit_match_path(match), class:'btn btn-ghost btn-square' do
                      %span.material-icons.admin-actions__link__icon= 'edit'
                  .admin-list-actions__link
                    = link_to match, method: :delete, data: { confirm: t('matches.delete') }, class: 'btn btn-sstm btn-square' do
                      %span.material-icons.admin-actions__link__icon= 'delete'

    .player-list-footer
      = render 'paginator', matches: @matches, anchor: 'stats'

