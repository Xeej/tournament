%h2.sidebar__title
  = t('partials.players.title')

%table.table.table-hover.table-borderless
  %thead.table-header
    %tr
      %th{colspan: '2'}= t('partials.players.player')
      %th{style: 'text-align: center;'}= t('w_l')

  %tbody.table-content.with-show
    - if !@topPlayers.nil? and @topPlayers.any?
      - @topPlayers.each_with_index do |player, i|
        %tr{'data-id': player.id, 'data-component'=>'player'}
          %td
            -# - if player
            -#   -# TODO изображение
            -#   - if File.file?("#{Rails.root}/app/assets/images/characters/diddy_kong.png")
            -#     = image_tag "characters/diddy_kong.png", height: '25px', width: '25px'
            -# - else
            .div{style: 'display: inline;'}
              %span.material-icons{style: 'vertical-align: middle; height: 25px; width: 25px;'}= 'help'
          %td= [player.surname, player.name].join(' ')
          - if player.wins == 0 and player.losses == 0
            - win_loss_ratio = nil
          - else
            - win_loss_ratio = player.win_loss_ratio
          %td{style: 'text-align: center;'}= win_loss_ratio.nil? ? '-' : "#{win_loss_ratio}%"
